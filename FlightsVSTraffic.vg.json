{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "layer": [
    {
      "data": {"url": "https://raw.githubusercontent.com/JamesCo24/AUS-Airport-Traffic-vs-OTP/refs/heads/main/data/Airport_Traffic.csv"},
      "transform": [
        {
          "aggregate": [
            {"field": "Pax_In", "op": "sum", "as": "Monthly_Pax_In"},
            {"field": "Pax_Out", "op": "sum", "as": "Monthly_Pax_Out"}
          ],
          "groupby": ["Month"]
        },
        {
          "fold": ["Monthly_Pax_In", "Monthly_Pax_Out"]
        }
      ],
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Number of Travellers"
        },
        "color":{
          "field": "key",
          "type": "nominal"
        },
        "x": {
          "field": "Month",
          "type": "ordinal",
          "sort": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
        },
        "tooltip": [
          {"field": "Month"},
          {"field": "value", "format": ",", "title": "Number of Passengers Arriving/Departing"}
        ]
      }
    },
    {
      "data": {"url": "https://raw.githubusercontent.com/JamesCo24/AUS-Airport-Traffic-vs-OTP/refs/heads/main/data/Airport_OTP.csv"},
      "transform": [
        {
          "calculate": "datum['Departures On Time']+datum['Departures Delayed']",
          "as": "Total_Departures"
        },
        {
          "calculate": "datum['Arrivals On Time']+datum['Arrivals Delayed']",
          "as": "Total_Arrivals"
        },
        {
          "joinaggregate": [
            {"field": "Total_Departures", "op": "sum", "as": "Monthly_Departures"},
            {"field": "Total_Arrivals", "op": "sum", "as": "Monthly_Arrivals"}
          ],
          "groupby": ["Month"]
        },
        {
          "fold": ["Monthly_Departures", "Monthly_Arrivals"]
        }
      ],
      "mark": {
        "type": "line",
        "point": true
      },
      "encoding": {
        "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Number of Flights"
        },
        "color": {
          "field": "key",
          "type": "nominal"
        },
        "x": {
          "field": "Month",
          "type": "ordinal",
          "sort": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
        },
        "tooltip": [
          {"field": "Month"},
          {"field": "value", "format": ",", "title": "Number of Departures/Arrivals"}
        ]
      }
    }
  ],
  "resolve": {
    "scale": {"y": "independent"}
  }
}